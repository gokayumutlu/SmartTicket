<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gky.smartticket">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/smartticket"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".TrainActivity"></activity>
        <activity android:name=".BusActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MidActivity" />
        <activity android:name=".Tickets" />
        <activity
            android:name=".MainEmptyActivity"
            android:theme="@android:style/Theme.NoDisplay" />
        <activity android:name=".ActivitySignup">

        </activity>
        <activity
            android:name=".LoginActivity"
            android:usesCleartextTraffic="true" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>